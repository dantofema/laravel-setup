
it('edit slug from :field: in :table: table', function () {
    $model = :model:::factory([':field:' => Str::random(40)])->create();
    $newValue = Str::random(40);

    Livewire::test(':view:')
        ->call('edit', $model->id)
        ->set('editing.:field:', $newValue)
        ->call('save')
        ->assertHasNoErrors();

    $this->assertEquals(Str::slug($newValue), :model:::first()->slug);
});
